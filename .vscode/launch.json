    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run Solver (Node)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${fileDirname}\\solve.js",
            "cwd": "${fileDirname}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run Solver (Coffee)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${fileDirname}\\solve.js",
            "cwd": "${fileDirname}",
            "preLaunchTask": "compile coffee here"
        }
    ]
}